<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroceryCalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_purple</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/light_black</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="popupMenuBackground">@null</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="DigitButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/light_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <style name="OperationBtnStyle" parent="DigitButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="CalculatorEt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalculatorLabelsTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/light_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="SpendingDetailsTv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BudgetInfoLabels" parent="SpendingDetailsTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="BudgetInfoTv" parent="BudgetInfoLabels">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BudgetInfoLl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>
</resources>